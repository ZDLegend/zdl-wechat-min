/*fonts*/
.article {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 10px 0;
    border-top: 1px dashed #ccc;
}
.author-data{
    width: 100%;
    height: 80rpx;
    flex-direction: row;
}
.avatar {
    width: 60rpx;
    height: 60rpx;
    margin: 12rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.nickname {
    font-size: 26rpx;
    margin-left: 12rpx;
    vertical-align: middle;
}
.thumbnail {
    width: 100%;
}
.introduce {
    padding: 0 10rpx;
    margin: 10px 0 5px;
    font-size: 24rpx;
    line-height: 38rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-indent: 50rpx;
}
.operate {
    height: 40rpx;
    margin-bottom: 2px;
    line-height: 40rpx;
    color: #aaa;
}
.level,
.operate-icon {
    margin: 0 6px;
}
.level {
    color: orange;
}
.perate-count {
    font-size: 26rpx;
    vertical-align: 2rpx;
}
.create-date {
    float: right;
    margin-right: 6px;
}